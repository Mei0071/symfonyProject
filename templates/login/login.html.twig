{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="formContainer">
        <div class="form">
            <form action="{{ path('login') }}" method="post">
                <label for="mail">{{ 'form.email'|trans}} </label>
                <input type="text" id="mail" name="_mail"  required>

                <label for="password">{{ 'form.password'|trans }}</label>
                <input type="password" id="password" name="_password" required>

                <button type="submit">{{ 'form.login'|trans }}</button>
            </form>

            <a href={{ path('register') }}>{{ 'form.register'|trans }}</a>
        </div>
    </div>

{% endblock %}
