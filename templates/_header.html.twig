<header>
    <img id="logo" src="{{ asset('assets/img/imageHeader.jpg') }}" alt="image d'instruments">

    <div class="header-content">
        <h1>VIBRATO</h1>
        <nav>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_admin') }}">{{ 'page.home'|trans }}</a>
                <a href="{{ path('adminProduct') }}">{{ 'product.product'|trans }}</a>
                <a href="{{ path('addCategory') }}">{{ 'page.addCategory'|trans }}</a>
            {% else %}
                <a href="{{ path('home') }}">{{ 'page.home'|trans }}</a>
                <a href="{{ path('product_vent') }}">{{'page.windInstrument'|trans}}</a>
                <a href="{{ path('product_corde') }}">{{ 'page.stringInstrument'|trans }}</a>
                <a href="{{ path('product_percussion') }}">{{ 'page.percussionInstrument'|trans }}</a>
            {% endif %}
        </nav>
    </div>

    <div class="lang-switch">
        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({'_locale': 'fr'})) }}">FR</a>
        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({'_locale': 'en'})) }}">EN</a>
    </div>


    <div class="right-header">
        {% if app.user %}
            <a href="{{ path('logout') }}">{{ 'user.logout'|trans }}</a>
        {% else %}
            <a href="{{ path('login') }}">{{ 'user.login'|trans }}</a>
        {% endif %}
        <img id="panier" src="{{ asset('assets/img/imageHeader.jpg')}}" alt="image panier">
    </div>
</header>